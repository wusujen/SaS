package com.christine.cart.visual;

import android.graphics.Bitmap;
import android.graphics.Canvas;
import android.view.SurfaceHolder;

public class GraphThread extends Thread {
	private SurfaceHolder _surfaceHolder;
	private GraphView _graph;
	private boolean _run = false;
	private int _bitmapWidth;
	private int _bitmapHeight;
	
	public GraphThread(SurfaceHolder surfaceHolder, GraphView graph, int bitmapWidth, int bitmapHeight){
		_surfaceHolder = surfaceHolder;
		_graph = graph;
		_bitmapWidth = bitmapWidth;
		_bitmapHeight = bitmapHeight;
	}
	
	public void setRunning (boolean run){
		_run = run;
	}
	
	@Override
	public void run(){
		Canvas c;
		Bitmap b;
		while(_run){
			c = null;
			try{
				c = _surfaceHolder.lockCanvas(null);
				c.drawARGB(255,255,255,255);
				
				//specify bitmap for canvas to draw on
				b = createBitmap(_bitmapWidth, _bitmapHeight, ARGB_8888);
				c.setBitmap(b);
				
				synchronized(_surfaceHolder){
					_graph.onDraw(c);
				}
				
			} finally{
				if(c!=null){
					_surfaceHolder.unlockCanvasAndPost(c);
				}
			}
		}
	}
}
